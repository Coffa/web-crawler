source 'https://rubygems.org'

gemspec

gem 'rails'

group :test do
	gem 'coveralls', :require => false
	gem 'rspec'
	gem 'rspec-rails'
	gem 'vcr'
	gem 'webmock'
	gem 'simplecov', :require => false
end

group :development, :test do
	gem 'debugger'
	gem 'pry'
	gem 'pry-debugger'
	gem 'pry-stack_explorer'
	gem 'pry-rails'
	gem 'pry-remote'
end
